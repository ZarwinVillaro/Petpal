<h3 class="text-center mb-4">Please fill this form</h3>

<%= form_with(model: @adoption, url: create_adoption_path, class: "p-4 border rounded shadow-sm bg-light") do |form| %>
  <div class="form-group mb-3">
    <%= form.label :full_name, class: "form-label" %>
    <%= form.text_field :full_name, class: "form-control" %>
  </div>
  
  <div class="form-group mb-3">
    <%= form.label :address, class: "form-label" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>
  
  <div class="form-group mb-3">
    <%= form.label :contact, class: "form-label" %>
    <%= form.text_field :contact, class: "form-control" %>
  </div>
  
  <div class="form-group mb-3">
    <%= form.label :reason, class: "form-label" %>
    <%= form.text_area :reason, class: "form-control" %>
  </div>


  <div class="form-group mb-3">
  <%= form.label :pet_id, class: "form-label" %>
  <%= form.text_area :pet_id, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
  <%= form.label :user_id, class: "form-label" %>
  <%= form.text_area :user_id, class: "form-control" %>
  </div>


  
  <div class="d-flex justify-content-between">
    <%= link_to "Back", adopt_pets_path, class: "btn btn-secondary" %>
    <%= form.submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
