<div class="container mt-5">
  <h2>Adoption List</h2>
  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Full Name</th>
        <th scope="col">Address</th>
        <th scope="col">Contact</th>
        <th scope="col">Reason</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @adoptions.each do |adoption| %>
        <tr>
          <td><%= adoption.full_name %></td>
          <td><%= adoption.address %></td>
          <td><%= adoption.contact %></td>
          <td><%= adoption.reason %></td>
          <td>
            <%= link_to 'Delete', adoptions_path(adoption), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
