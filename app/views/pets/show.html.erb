<div class="container mt-5">
  <div class="card border-0 shadow-sm rounded">
    <div class="card-body p-5">
      <%= render @pet %>

      <div class="mt-4">
        <%= link_to "Edit", edit_pet_path(@pet), class: "btn btn-primary mr-2" %>
        <%= link_to "Back", pets_path, class: "btn btn-secondary mr-2" %><br><br>
        <%= button_to "Delete", @pet, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
