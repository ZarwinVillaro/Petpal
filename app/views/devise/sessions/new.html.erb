<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-0 shadow-sm rounded">
        <div class="card-body p-5">
          <h2 class="text-center mb-4">Welcome Back!</h2>
          <p class="text-center text-muted">Log in to continue your journey with PetPal</p>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "devise-form" }) do |f| %>
            <div class="form-group mt-3">
              <%= f.label :email, class: "font-weight-bold" %>
              <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
            </div>
            <div class="form-group mt-3">
              <%= f.label :password, class: "font-weight-bold" %>
              <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="form-group mt-3">
                <div class="form-check">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, class: "form-check-label" %>
                </div>
              </div>
            <% end %>
            <div class="text-center mt-4">
              <%= f.submit "Log in", class: "btn btn-primary btn-block", data: { turbo: false } %>
            </div>
          <% end %>
          <div class="text-center mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
