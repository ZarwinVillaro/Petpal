<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-0 shadow-sm rounded">
        <div class="card-body p-5">
          <h2 class="text-center mb-4">Join PetPal Today!</h2>
          <p class="text-center text-muted">Create an account and find your new best friend.</p>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "devise-form"}) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group mt-3">
              <%= f.label :image, class: "font-weight-bold" %>
              <%= f.file_field :image, class: "form-control" %>
            </div>

            <div class="form-group mt-3">
              <%= f.label :full_name, class: "font-weight-bold" %>
              <%= f.text_field :full_name, class: "form-control", autofocus: true, autocomplete: "full_name" %>
            </div>

            <div class="form-group mt-3">
              <%= f.label :email, class: "font-weight-bold" %>
              <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
            </div>

            <div class="form-group mt-3">
              <%= f.label :password, class: "font-weight-bold" %>
              <% if @minimum_password_length %>
                <small class="text-muted">(<%= @minimum_password_length %> characters minimum)</small>
              <% end %>
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
            </div>

            <div class="form-group mt-3">
              <%= f.label :password_confirmation, class: "font-weight-bold" %>
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
            </div>

            <div class="form-group mt-3">
              <%= f.label :role, "Sign up as", class: "font-weight-bold" %>
              <%= f.select :role, options_for_select([['Adoptor', 'user'], ['Pet Owner', 'pet_owner']]), {}, class: "form-control" %>
            </div>
            
            <div class="text-center mt-4">
              <%= f.submit "Sign up", class: "btn btn-primary btn-block", data: {turbo: false} %>
            </div>
          <% end %>
          <div class="text-center mt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
