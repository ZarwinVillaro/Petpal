<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card border-0 shadow-sm rounded">
        <div class="card-body p-5">

          <%= link_to "Back", :back, class: "btn btn-secondary mt-3 mb-4" %>
          <h2 class="text-center mb-4">Edit <%= resource_name.to_s.humanize %></h2>

          <div class="text-center mt-3">
          <% if current_user.image.attached? %>
            <%= image_tag current_user.image, style: "width: 150px; height: 150px; object-fit: cover; border-radius: 50%;" %>
          <% end %>
        </div>
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "devise-form" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group mt-3">
              <%= f.label :image, class: "font-weight-bold" %>
              <%= f.file_field :image, class: "form-control" %>
            </div>

            <div class="form-group mt-3">
              <%= f.label :full_name, class: "font-weight-bold" %>
              <%= f.text_field :full_name, class: "form-control", autofocus: true, autocomplete: "full_name" %>
            </div>

            <div class="form-group mt-3">
              <%= f.label :email, class: "font-weight-bold" %>
              <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="text-muted">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="form-group mt-3">
              <%= f.label :password, class: "font-weight-bold" %> <i>(leave blank if you don't want to change it)</i>
              <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
              <% if @minimum_password_length %>
                <small class="text-muted"><%= @minimum_password_length %> characters minimum</small>
              <% end %>
            </div>

            <div class="form-group mt-3">
              <%= f.label :password_confirmation, class: "font-weight-bold" %>
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
            </div>

            <div class="form-group mt-3">
              <%= f.label :current_password, class: "font-weight-bold" %> <i>(we need your current password to confirm your changes)</i>
              <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
            </div>

            <div class="text-center mt-4">
              <%= f.submit "Update", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>

          <h3 class="mt-4 text-center text-danger">Cancel my account</h3>
          <div class="text-center">
            <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
